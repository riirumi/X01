#include <iostream>
using namespace std;

int main()
{
	int value;
	char kind, coin;


	cout<<"Is it a banknote? Or a coin? (B/C)" <<endl;
	cin>>kind;
	
	if(kind=='b' || kind =='B'){
	cout<<"Please enter the value of your money: ";
	cin>>value;
		switch(value){
	
			case 20:
			cout<<"This has the face of Manuel L. Quezon";
			break;
	
			case 50:
			cout<<"This has the face of Sergio Osmena";
			break;
	
			case 100:
			cout<<"This has the face of Manuel A. Roxas";
			break;
	
			case 200:
			cout<<"This has the face of Diosdado P. Macapagal";
			break;
	
			case 500:
			cout<<"This has the face of Corazon C. Aquino, and Benigno S. Aquino Jr. ";
			break;
	
			case 1000:
			cout<<"This has the faces of Jose Abad Santos, Vicente Lim, and Josefa Llanes Escoda";
			break;
	
			default:
			cout<<"That banknote does not exist";
			break;
			}
	}
	else if(kind=='c' || kind =='C'){
	cout<<"Is it in centavos? (Y/N)" <<endl;
	cin>>coin;
			if (coin=='Y'||coin=='y'){
			cout<<"Please enter the value of your money: ";
			cin>>value;
				switch(value){
			
				case 1:
				cout<<"This coin doesn't have any face on it";
				break;
	
				case 5:
				cout<<"This coin doesn't have any face on it";
				break;
	
				case 25:
				cout<<"This coin doesn't have any face on it";
				break;
	
				default:
				cout<<"That coin does not exist";
				break;
				}
			}
	
			else if (coin=='n' || coin=='N'){
			cout<<"Please enter the value of your money: ";
			cin>>value;
				switch(value){
				case 1:
				cout<<"This coin has the face of Jose Rizal";
				break;
		
				case 5:
				cout<<"This coin has the face of Andres Bonifacio";
				break;
	
				case 10:
				cout<<"This coin has the face of Apolinario Mabini";
				break;
	
				default:
				cout<<"That coin does not exist";
				break;
				}
				}
			else {
			cout <<"Follow instructions please.";
			}
			}
	
	else {
		cout <<"Follow instructions please.";
	}

		return 0;
}
